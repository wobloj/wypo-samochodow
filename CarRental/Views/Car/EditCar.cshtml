@using CarRental.Services.Car
@model CarRental.Models.Car.CarModel
@inject ICService _carService
@{
    ViewData["Title"] = "Edytuj samochód";
}
<form method="post" asp-controller="Car" asp-action="EditThisCar">
    <div class="form-group">
        <label class="text-secondary" for="id">Id</label>
        <input asp-for="Id" class="form-control text-secondary" type="text" id="id" placeholder="Id" name="id" value="@Model.Id" readonly />
        <span asp-validation-for="Id" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="car">Nazwa samochodu</label>
        <input asp-for="Car" class="form-control" type="text" id="car" placeholder="Nazwa samochodu" name="car" value="@Model.Car" />
        <span asp-validation-for="Car" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="model">Model samochodu</label>
        <input asp-for="Model" class="form-control" type="text" id="model" placeholder="Model samochodu" name="model" value="@Model.Model" />
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="engine">Silnik</label>
        <input asp-for="Engine" class="form-control" type="text" id="engine" placeholder="Silnik" name="engine" value="@Model.Engine" />
        <span asp-validation-for="Engine" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="bodyType">Typ nadwozia</label>
        <input asp-for="BodyType" class="form-control" type="text" id="bodyType" placeholder="Typ nadwozia" name="bodyType" value="@Model.BodyType" />
        <span asp-validation-for="BodyType" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="productionYear">Rok produkcji</label>
        <input asp-for="ProductionYear" class="form-control" type="number" id="productionYear" placeholder="Rok produkcji" name="productionYear" value="@Model.ProductionYear" />
        <span asp-validation-for="ProductionYear" class="text-danger"></span>
    </div>
    <div class="text-center m-5">
        <a asp-action="Index" class="btn btn-outline-danger"><i class="fa-solid fa-arrow-left me-1"></i>Cofnij</a>
        <button type="submit" class="btn btn-warning"><i class="fa-solid fa-pen me-1"></i>Edytuj</button>
    </div>
</form>
