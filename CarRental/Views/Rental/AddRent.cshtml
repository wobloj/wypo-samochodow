@model CarRental.Models.Rental.RentalViewModel
@{
    ViewData["Title"] = "Dodaj nowe wypożyczenie";
}

<form method="post" asp-controller="Rental" asp-action="AddRent">
    <div class="form-group">
        <label for="carId">Samochód</label>
        <select asp-for="CarId" class="form-select" asp-items="@(new SelectList(Model.CarsList, "Id", "Car"))">
            <option>Wybierz samochód</option>
        </select>
        <span asp-validation-for="Car" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="PersonId">Osoba</label>
        <select asp-for="UserId" class="form-select" asp-items="@(new SelectList(Model.UsersList, "Id", "FirstName"))">
            <option>Wybierz osobe</option>
        </select>
        <span asp-validation-for="User" class="text-danger"></span>
    </div>

    <div class="text-center m-5">
        <a asp-action="Index" class="btn btn-outline-danger"><i class="fa-solid fa-arrow-left me-1"></i>Cofnij</a>
        <button type="submit" class="btn btn-success"><i class="fa-solid fa-plus me-1"></i>Wypożycz</button>
    </div>

    <div class="border rounded text-center m-5 p-4">
        <p class="h3">Nie ma cie na liście?</p>
        <a class="btn btn-success p-3" asp-controller="User" asp-action="AddUser"><i class="fa-solid fa-plus me-1"></i>Dodaj nową osobe</a>
    </div>
</form>